package com.tbyf.ehr.xmlparser;

public class XmlStringBufferUtil {
	
	public static String   sendMessgeInfo(String code ,String message){
	     	StringBuffer str = new StringBuffer();
	    str.append("<?xml version=\"1.0\" encoding=\"utf-8\"?>");
	    str.append("<response>");
	    str.append("<returnresult>");
	    str.append("<returncode>"+code+"</returncode>");
	    str.append("<errormsg>"+message+"</errormsg>");
	    str.append("</returnresult>");
	    str.append("</response>");
	return str.toString();
	 
 }

}
